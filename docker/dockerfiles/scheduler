FROM openjdk:8

LABEL maintainer="wesley.monte@ccc.ufcg.edu.br"

ENV MAIN_CLASS="org.fogbowcloud.saps.engine.core.scheduler.SchedulerMain"

# Create bind mounts for these entries
ENV CONFIG_PATH="/scheduler/scheduler.conf"
ENV LOG_PROPERTIES_PATH="/scheduler/log4j.properties"

WORKDIR /scheduler

COPY ./target/saps-engine-0.0.1-SNAPSHOT.jar scheduler.jar
COPY ./target/lib  lib/

ENTRYPOINT java -Dlog4j.configuration=file:"${LOG_PROPERTIES_PATH}" -cp scheduler.jar:lib/* "${MAIN_CLASS}" "${CONFIG_PATH}"