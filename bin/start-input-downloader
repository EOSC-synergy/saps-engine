#!/bin/bash
sebal_engine_dir_path=
downloader_ip=
downloader_ssh_port=
downloader_nfs_port=
federation_member=

while [ true ]
do
  if pgrep -x "java" > /dev/null
  then
    java_pid="$(pidof java)"
    sudo kill -9 $java_pid
    sleep 10
  fi

  sudo java -Dlog4j.configuration=file:$sebal_engine_dir_path/config/downloader-log4j.properties -cp target/saps-engine-0.0.1-SNAPSHOT.jar:target/lib/* org.fogbowcloud.saps.engine.core.downloader.InputDownloaderMain $sebal_engine_dir_path/config/saps-downloader-lsd.conf $downloader_ip $downloader_ssh_port $downloader_nfs_port $federation_member &
  sleep 10m
done